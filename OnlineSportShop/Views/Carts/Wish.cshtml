@model List<WishList>
@{

}



<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/Home/index">Home</a>
                <a class="breadcrumb-item text-dark" href="/Home/Product">Product</a>
                <span class="breadcrumb-item active">Shopping Cart</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Product Photo</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Remove</th>
                        <th>Add To Cart</th>
                    </tr>
                </thead>
                <tbody class="align-middle">
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td class="align-middle"><img src="~/productImages/@item.Product.ProImage" alt="" style="width: 50px;"></td>
                                <td class="align-middle">@item.Product.ProName</td>
                                <td class="align-middle">$@item.Product.Price</td>
                                <td class="align-middle">
                                    <form method="post" asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Product.ProId">
                                        <button type="submit" class="btn btn-md btn-primary"><i class="fas fa-shopping-cart"></i></button>
                                    </form>
                                </td>

                                <td class="align-middle">
                                    <form method="post" asp-action="RemoveWish" asp-controller="Carts" asp-route-id="@item.Product.ProId">
                                        <button type="submit" class="btn btn-md btn-danger"><i class="fa fa-times"></i></button>
                                    </form>
                                </td>

                            </tr>

                    }

                    
                </tbody>
            </table>
        </div>


    </div>
</div>
<!-- Cart End -->
