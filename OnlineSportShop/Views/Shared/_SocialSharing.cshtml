@model string
@{
    string currentUrl =   Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
    string enc = System.Net.WebUtility.UrlEncode(currentUrl);
    string text = System.Net.WebUtility.UrlEncode(Model);
}


    <aside class="socialsharing  align-items-center">
      <div class="d-flex align-items-center justify-content-center mt-2">
        <a class="btn btn-primary btn-sm-square mr-2" href="https://twitter.com/intent/tweet?url=@enc&text=@text" target="_blank" rel="noopener noreferrer nofollow"><i class="fab fa-twitter"></i></a>
        <a class="btn btn-primary btn-sm-square " href="https://www.facebook.com/sharer/sharer.php?u=@enc" target="_blank" rel="noopener noreferrer nofollow"><i class="fab fa-facebook-f"></i></a>
        @*<a class="btn btn-primary btn-sm-square" data-pin-do="buttonBookmark" href="https://www.pinterest.com/pin/create/button/"></a>*@
      </div>      
    </aside>



