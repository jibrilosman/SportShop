@model Contact
<!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="/Home/Index">Home</a>
                    <span class="breadcrumb-item active">Contact</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Contact Start -->
    <div class="container-fluid">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Contact
                Us</span></h2>
        <div class="row px-xl-5">
            <div class="col-lg-7 mb-5">
                <div class="contact-form bg-light p-30">
                    <div id="success"></div>
                    <form asp-action="Contact" method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="control-group">
                            <input type="text" class="form-control" placeholder="Your Name"
                                asp-for="Name" />
                            <span asp-validation-for="Name" class="help-block text-danger"></span>
                        </div>
                        <div class="control-group">
                            <input type="email" class="form-control"  placeholder="Your Email"
                              asp-for="Email" />
                            <span asp-validation-for="Email" class="help-block text-danger"></span>
                        </div>
                        <div class="control-group">
                            <input type="text" class="form-control"  placeholder="Subject"
                                asp-for="Subject" />
                            <span asp-validation-for="Subject" class="help-block text-danger"></span>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control" rows="8"  placeholder="Message"
                                asp-for="Message"></textarea>
                            <span asp-validation-for="Message" class="help-block text-danger"></span>
                        </div>
                        <div>
                            <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">Send
                                Message</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-5 mb-5">

                <div class="bg-light p-30 mb-3">
                    <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>123 Street, Toronto, CANADA</p>
                    <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>info@example.com</p>
                    <p class="mb-2"><i class="fa fa-phone-alt text-primary mr-3"></i>+012 345 67890</p>
                </div>
            </div>
        </div>
    </div>
    <!-- Contact End -->